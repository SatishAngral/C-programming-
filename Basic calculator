#include <stdio.h>
int main () {

    // CALCULATOR PROGRAM

    char operator = '\0';
    double num1 = 0.0;
    double num2 = 0.0;
    double result = 0.0;

    printf("Enter first number: ");
    scanf("%lf",&num1);

    printf("Enter the operator ( + - * / ): ");
    scanf(" %c",&operator);

    printf("Enter second number: ");
    scanf("%lf",&num2);

    switch (operator) {
        
        case '+' :
            result = num1 + num2;
            break;
        case '-' :
            result = num1 - num2;
            break;
        case '*' :
            result = num1 * num2;
            break;
        case '/' :
            if(num2 == 0){
                printf("You cannot divide with zero! \n");
            }
            else {
                result = num1 / num2;
            }
            break;
        default: 
            printf("Invalid Operator! \n");
    }

    printf("Result: %.2lf", result);

    return 0;
}
